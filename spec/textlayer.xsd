                    </compilerArgs>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.mapstruct</groupId>
                            <artifactId>mapstruct-processor</artifactId>
                            <version>${mapstruct.version}</version>
                        </path>
                        <path>
                            <groupId>org.springframework</groupId>
                            <artifactId>spring-context-indexer</artifactId>
                            <version>6.1.14</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-frontend-resources</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/classes/static</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>../frontend/dist</directory>
                                    <filtering>false</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>plugin-api-jar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <classifier>plugin-api</classifier>
                            <includes>
                                <include>net/schwehla/matrosdms/plugin/**</include>
                                <include>net/schwehla/matrosdms/domain/**</include>
                                <include>com/fasterxml/jackson/annotation/**</include> 
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- NEW: AppCDS Script Generator -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>generate-start-scripts</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <!-- Windows Batch Script -->
                                <echo file="${project.build.directory}/run-optimized.bat"><![CDATA[@echo off
set JAR_FILE=%~dp0${project.artifactId}-exec.jar
set JSA_FILE=%~dp0${cds.file}

if exist "%JSA_FILE%" (
    echo [AppCDS] Cache found. Starting optimized...
) else (
    echo [AppCDS] Cache missing. Performing Training Run...
    java -XX:ArchiveClassesAtExit="%JSA_FILE%" -Dspring.context.exit=onRefresh -jar "%JAR_FILE%"
    echo [AppCDS] Training complete.
)

echo Starting MatrosDMS...
java -XX:SharedArchiveFile="%JSA_FILE%" -jar "%JAR_FILE%"
]]></echo>

                                <!-- Linux Shell Script -->
                                <echo file="${project.build.directory}/run-optimized.sh"><![CDATA[#!/bin/sh
JAR_FILE="$(dirname "$0")/${project.artifactId}-exec.jar"
JSA_FILE="$(dirname "$0")/${cds.file}"

if [ -f "$JSA_FILE" ]; then
    echo "[AppCDS] Cache found. Starting optimized..."
else
    echo "[AppCDS] Cache missing. Performing Training Run..."
    java -XX:ArchiveClassesAtExit="$JSA_FILE" -Dspring.context.exit=onRefresh -jar "$JAR_FILE"
    echo "[AppCDS] Training complete."
fi

echo "Starting MatrosDMS..."
java -XX:SharedArchiveFile="$JSA_FILE" -jar "$JAR_FILE"
]]></echo>
                                <chmod file="${project.build.directory}/run-optimized.sh" perm="755"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

